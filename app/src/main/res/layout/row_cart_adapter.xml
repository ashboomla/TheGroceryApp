<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="#fff"
    app:cardCornerRadius="7dp">



    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryLight"
        android:padding="2dp">

        <ImageView
            android:id="@+id/image_view_RCA"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="20dp" />

        <TextView
            android:id="@+id/text_view_product_name_RCA"
            style="@style/textTitleStyle1"
            android:textStyle="normal"
            android:layout_margin="30dp"
            android:textSize="20dp"
            android:layout_toRightOf="@+id/image_view_RCA"
            android:gravity="center"
            android:padding="5dp"
            android:text="title" />

        <TextView
            android:id="@+id/text_view_price_RCA"
            style="@style/textSubStyle1"
            android:layout_below="@+id/image_view_RCA"
            android:layout_margin="30dp"
            android:gravity="center"
            android:text="price"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_view_mrp_RCA"
            style="@style/textSubStyle1"
            android:background="@drawable/shape_strikethrough"
            android:layout_below="@+id/image_view_RCA"
            android:layout_margin="30dp"
            android:layout_toRightOf="@+id/text_view_price_RCA"
            android:gravity="center"
            android:text="mrp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button_add"
            style="@style/buttonStyle2"
            android:layout_below="@+id/text_view_mrp_RCA"
            android:layout_marginLeft="50dp"
            android:layout_width="50dp"
            android:layout_toRightOf="@id/button_Remove_RCA"
            android:background="@drawable/button_shape_rounded_left"
            android:text="+"
            android:textSize="20dp" />

        <Button
            android:id="@+id/text_view_qtyReq_RCA"
            style="@style/buttonStyle2"
            android:layout_width="50dp"
            android:textColor="@color/tbText"
            android:layout_below="@id/text_view_mrp_RCA"
            android:layout_margin="0dp"
            android:layout_toRightOf="@+id/button_add"
            android:background="@drawable/row_product_fragment_background"
            android:clickable="false"
            android:padding="0dp"
            android:text="1" />

        <Button
            android:id="@+id/button_sub"
            style="@style/buttonStyle2"
            android:layout_below="@+id/text_view_mrp_RCA"
            android:layout_toRightOf="@+id/text_view_qtyReq_RCA"
            android:background="@drawable/button_shape_rounded_right"
            android:padding="0dp"
            android:layout_width="50dp"
            android:text="-" />


        <Button
            android:id="@+id/button_Remove_RCA"
            style="@style/buttonStyle"
            android:padding="2dp"
            android:layout_below="@+id/text_view_price_RCA"
            android:background="@drawable/button_background"
            android:text="Remove" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/button_Remove_RCA"
            android:text="Total:"
            style="@style/textSubStyle1"
            android:textStyle="bold"
            android:layout_margin="30dp"
            android:id="@+id/text_view_total_RCA"
            />


    </RelativeLayout>


</androidx.cardview.widget.CardView>
