<?xml version="1.0" encoding="utf-8"?>


<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary">
        <ImageView
            android:id="@+id/image_view_PDA"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_margin="15dp" />

        <TextView
            android:id="@+id/text_view_name_PDA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image_view_PDA"
            android:layout_margin="5dp"
            android:padding="10dp"
            android:text="title"
            android:textColor="@color/tbText"
            android:textColorHint="@color/tbHint"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_view_desc_PDA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_view_name_PDA"
            android:layout_alignStart="@+id/text_view_name_PDA"
            android:layout_margin="5dp"
            android:padding="10dp"
            android:text="desc"
            android:textColor="@color/tbText"
            android:textColorHint="@color/tbHint"
            android:textSize="20dp" />

        <Button
            android:id="@+id/button_add_to_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_toRightOf="@+id/image_view_PDA"
            android:background="@drawable/button_background"
            android:layout_below="@+id/text_view_desc_PDA"
            android:padding="2dp"
            android:text="Add to Cart"
            android:textSize="16dp" />

        <Button
            android:id="@+id/button_go_to_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_toRightOf="@+id/image_view_PDA"
            android:background="@drawable/button_background"
            android:layout_below="@+id/button_add_to_cart"
            android:padding="2dp"
            android:text="Go to Cart"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/text_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_view_desc_PDA"
            android:layout_marginTop="50dp"
            android:padding="10dp"
            android:text="PRICE"
            android:textColor="@color/tbText"
            android:textColorHint="@color/tbHint"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/text_view_price_PDA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_price"
            android:layout_marginTop="25dp"
            android:padding="10dp"
            android:text="0.00"
            android:textColor="@color/tbText"
            android:textColorHint="@color/tbHint"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/text_mrp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_view_desc_PDA"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="25dp"
            android:padding="10dp"
            android:text="MRP"
            android:textColor="@color/tbText"
            android:layout_toRightOf="@+id/text_price"
            android:textColorHint="@color/tbHint"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/text_view_mrp_PDA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_price"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="25dp"
            android:padding="10dp"
            android:text="0.00"
            android:layout_toRightOf="@+id/text_view_price_PDA"
            android:textColor="@color/tbText"
            android:textColorHint="@color/tbHint"
            android:textSize="20dp" />

    </RelativeLayout>


    </ScrollView>

