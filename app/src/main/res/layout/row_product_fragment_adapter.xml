<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="#fff"
    app:cardCornerRadius="7dp">


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/row_product_fragment_background"
        android:orientation="vertical"
        android:padding="12dp">

        <ImageView
            android:id="@+id/image_view_APF"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:layout_margin="10dp"
            android:padding="5dp" />

        <TextView
            android:id="@+id/text_view_name_APF"
            style="@style/textTitleStyle1"
            android:textStyle="normal"
            android:layout_alignTop="@+id/image_view_APF"
            android:layout_margin="5dp"
            android:layout_toRightOf="@+id/image_view_APF"
            android:text="title"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/text_view_price_APF"
            style="@style/textTitleStyle1"
            android:layout_below="@+id/text_view_name_APF"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:layout_toRightOf="@+id/image_view_APF"
            android:text="1"
            android:textSize="20dp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>

